<Window x:Class="XMLReader_Add_In.Forms.WPFSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XMLReader_Add_In.Forms"
             mc:Ignorable="d" 
        d:DesignWidth="800" 
        Height="80" 
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        
        <RichTextBox x:Name="SearchBox_RTB" 
                     Height="80" 
                     VerticalAlignment="Top" 
                     TextChanged="RichTextBox_TextChanged" 
                     HorizontalAlignment="Left" 
                     VerticalContentAlignment="Center" 
                     FontSize="54" AcceptsReturn="False" 
                     KeyDown="SearchBox_RTB_KeyDown"
                     >
            <FlowDocument >
                <Paragraph Name="main_part">
                    <Span Name="user_text"></Span>
                    <!--<Span>asd</Span><Span Name="AutoComplete" Foreground="LightGray">ABC</Span>-->
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
